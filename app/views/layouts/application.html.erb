<!DOCTYPE html>
<html>
<head>
  <title>EasiTravel</title>
  <%= stylesheet_link_tag  'style.css' %>
  <%= stylesheet_link_tag  'bootstrap.css' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="<%= asset_path 'favicon.ico'%>">
</head>

<nav class="navbar navbar-default" role="navigation" id="mynav">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/dashboard">EasiTravel</a>
  </div>


  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
   <% if user_signed_in? %>
    <ul class="nav navbar-nav">
      <li >
      	<%= link_to "ReadyMade Packages", travel_packages_path  %>
      </li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Add New <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Destination", destinations_path  %></li>
          <li><%= link_to "Airfare", airfares_path  %></li>
          <li ><%= link_to "Hotel", hotels_path  %></li>
           <li class="divider"></li>
          <li>
          <%= link_to "Local Transpotation", local_transpotations_path  %>
          </li>
          <li>
          <%= link_to "Guide", guides_path  %>
          </li>
        </ul>
      </li>
    </ul>
  <% end %>
    
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
       <% if user_signed_in? %>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account Setting<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Account Setting", edit_user_registration_path  %></li>
          <li><a href="#">Help</a></li>
          <li class="divider"></li>
          <li>   <%= link_to "Log Out", destroy_user_session_path, method: :delete  %></li>
        </ul>
      <% else %>
          <%= link_to "Log In", user_session_path  %>
      <% end %>
      </li>
    </ul>
  </div><!-- /.navbar-collapse -->
</nav>

<body data-no-turbolink="true">

<%= yield %>

</body>
</html>

