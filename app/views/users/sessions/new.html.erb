<div class="sign_in_bg" style="background: url(<%= asset_path('backend.jpg') %>);">
	<div class="col-md-12" id="signin_header"></div>
	<div class="col-md-12">
		<div class="col-md-4"></div>
  		<div class="col-md-4">
  			<div class="sign_inframe">

			 		<% flash.each do |key, notice| %>
				    	<div class="alert alert-<%= key %>">
				        	<span class="sign_in_noti"><%= notice %></span>
				    	</div>
					<% end %>
  		
					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						 <%= devise_error_messages! %>
						  <div><span class="usn">User name</span><br />
						  <%= f.text_field :user_name, autofocus: true, :class =>"form-control", :placeholder =>"user name" %></div><br/>

						  <div><span class="pwd">Password</span><br />
						    <%= f.password_field :password, autocomplete: "off", :class =>"form-control",  :placeholder =>"password" %></div>

						  <% if devise_mapping.rememberable? -%>
						    <div><br/>
						    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
								<span class="login_btn">
								<%= f.submit "Log in", :class => "btn btn-warning" %>
								</span>
						    </div>
						  <% end %>

					<% end %>
			</div>

			<div class="sign_incontact">
				<p>If you have any problems? Contact <a href="mailto:htoomyatag.webdev@gmail.com" target="_blank" >htoomyatag.webdev@gmail.com</a></p>
			</div>
		</div>
		<div class="col-md-4"></div>
	</div>
</div>
