<h1>Listing packages</h1>

<table>
  <thead>
    <tr>
      <th>Destiation</th>
      <th>Airfare</th>
      <th>Local transpotation</th>
      <th>Guide</th>
      <th>Travel detail</th>
      <th>Hotel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.destination_id %></td>
        <td><%= package.airfare_id %></td>
        <td><%= package.local_transpotation_id %></td>
        <td><%= package.guide_id %></td>
        <td><%= package.travel_detail %></td>
        <td><%= package.hotel_id %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New package', new_package_path %>
