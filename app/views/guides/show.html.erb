
<div class="container">
	<ol class="breadcrumb">
	  <li><%= link_to "Dashboard", dashboard_path  %></li>
	  <li><%= link_to "Guide", guides_path  %></li>
	  <li class="active">Guide Info</li>
	</ol>



    <% flash.each do |key, notice| %>
	    <div class="alert alert-<%= key %>">
	        <a href="#" data-dismiss="alert" class="close">Ã—</a>
	        <%= notice %>
	    </div>
	<% end %>

	<div class="panel panel-default">
	  <div class="panel-heading">Form - Guide Info</div>
	    <div class="panel-body">
			<dl class="dl-horizontal">
			  <h5>
			        <dt>Name:</dt>
			        <dd><%= @guide.name %></dd>
			  </h5>
			  <h5>
			        <dt>Price:</dt>
			        <dd><%= @guide.price %></dd>
			  </h5>
			  <h5>
			        <dt>Rank:</dt>
			        <dd> <%= @guide.rank %></dd>
			  </h5>
			  <h5>
			        <dt>Guide Type:</dt>
			        <dd><%= @guide.guide_type %></dd>
			  </h5>
			  <h5>
			        <dt>Contact:</dt>
			        <dd> <%= @guide.contact %></dd>
			  </h5>
      		</dl>

		</div>
        <div class="panel-footer">
            <%= link_to 'Edit', edit_guide_path(@guide),  :class =>"btn btn-info" %>
			<%= link_to 'Back', guides_path,  :class =>"btn btn-default" %>
        </div>
  	</div>
</div>




	


</div>

