<div class="container">
	<ol class="breadcrumb">
	  <li><%= link_to "Dashboard", dashboard_path  %></li>
	  <li><%= link_to "Hotels", hotels_path  %></li>
	  <li class="active">Hotel Info</li>
	</ol>



    <% flash.each do |key, notice| %>
	    <div class="alert alert-<%= key %>">
	        <a href="#" data-dismiss="alert" class="close">Ã—</a>
	        <%= notice %>
	    </div>
	<% end %>

	<div class="panel panel-default">
	  <div class="panel-heading">Form - Hotel Info</div>
	    <div class="panel-body">
			<dl class="dl-horizontal">
			  <h5>
			        <dt>Name:</dt>
			        <dd><%= @hotel.name %></dd>
			  </h5>
			  <h5>
			        <dt>Price:</dt>
			        <dd><%= @hotel.price %></dd>
			  </h5>
			  <h5>
			        <dt>Rank:</dt>
			        <dd> <%= @hotel.rank %></dd>
			  </h5>
			  <h5>
			        <dt>Star:</dt>
			        <dd> <%= @hotel.star %></dd>
			  </h5>
			   <h5>
			        <dt>Contact:</dt>
			        <dd> <%= @hotel.contact %></dd>
			  </h5>
			  <h5>
			        <dt>Description:</dt>
			        <dd> <%= @hotel.description %></dd>
			  </h5>
			  <h5>
			        <dt>Destination:</dt>
			        <dd> <%= @hotel.destination.name%></dd>
			  </h5>
      		</dl>

		</div>
        <div class="panel-footer">
            <%= link_to 'Edit', edit_hotel_path(@hotel),  :class =>"btn btn-info" %>
			<%= link_to 'Back', hotels_path,  :class =>"btn btn-default" %>
        </div>
  	</div>
</div>




	


</div>